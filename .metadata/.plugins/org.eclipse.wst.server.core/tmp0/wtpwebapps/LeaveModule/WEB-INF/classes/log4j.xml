<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<!-- Appenders -->
	<appender name="querylite" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/log4j/querylite.log" />
		<param name="Append" value="false" />
		<param name="ImmediateFlush" value="true" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{ISO8601}] %p %c.%M:%L - %m%n" />
		</layout>
	</appender>
	<!-- Application Loggers -->
	<logger name="com.thoughtfocus.querylite">
		<level value="debug" />
	</logger>
	<!-- 3rd party loggers -->
	<logger name="org.springframework.jdbc.core.JdbcTemplate">
		<level value="debug" />
		<appender-ref ref="querylite" />
	</logger>
	<root>
		<priority value="info" />
		<appender-ref ref="querylite" />
	</root>
</log4j:configuration>